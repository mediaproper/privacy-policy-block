{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "mediaproper/privacy-policy-block",
	"version": "1.0.0",
	"title": "Privacy Policy",
	"category": "widgets",
	"keywords": ["privacy", "policy"],
	"description": "Display a privacy policy link if the privacy policy page is set.",
	"example": {},
	"attributes": { "linkTitle": {"type": "string"} },
	"supports": {
		"color": {"background": false, "text": true},
		"html": false,
		"typography": {
			"fontSize"     : true,
			"lineHeight"   : true,
			"fontWeight"   : true,
			"fontStyle"    : true,
			"textTransform": true,
			"fontFamily"   : true
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"__experimentalDefaultControls": {"margin": false, "padding": false}
		}
	},
	"textdomain": "privacy-policy-block",
	"editorScript": "file:./index.js",
	"render": "file:./render.php"
}
